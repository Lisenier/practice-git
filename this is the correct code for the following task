#include <stdio.h>
#include <stdlib.h>
#include <math.h>


int main()
{
    int n;
    printf("enter the value of n");
    scanf("%d",&n);

    for(int i=1;i<=n;i++)
    {
         for(int k=n-1;k>0;k--)
    {

        printf(" ");
    }
        for(int j=1;j<=i;j++)
        {
            if(j==1||j==i)
                printf("1");
            else
                printf("%d",i-1);
        }
        printf("\n");
    }

        return 0;
}
